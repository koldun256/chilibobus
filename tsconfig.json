{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2015",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src", "test/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
